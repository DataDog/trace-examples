{
  "name": "open-telemetry/distributed-tracing-example",
  "type": "application",
  "homepage": "https://opentelemetry.io/docs/php",
  "license": "Apache-2.0",
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:open-telemetry/opentelemetry-php.git"
    }
  ],
  "require": {
    "php": ">=8.1",
    "open-telemetry/sdk": "^1.0",
    "open-telemetry/api": "^1.0",
    "guzzlehttp/guzzle": "*",
    "php-http/guzzle7-adapter": "*",
    "slim/slim": "~4",
    "php-di/php-di": "^6.3",
    "php-di/slim-bridge": "^3.2",
    "nyholm/psr7": "^1.4"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false,
      "tbachert/spi": true
    }
  }
}
